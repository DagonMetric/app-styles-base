# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,scss}]
indent_size = 4

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

# Configuration Files
[*.{json,xml,yml,config}]
indent_size = 2
